<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/year"
        android:layout_marginTop="10dp"
        style="@style/cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />
    <TextView
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        android:background="@color/planning_actionbar_background"
        android:height="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/lstImage"
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/lstTopic"
                    android:text="浪漫黄山游"
                    android:textSize="18sp"
                    android:textColor="#3B8F57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lstTime"
                    android:text="2015-5-1"
                    android:gravity="right"
                    android:textColor="#E5C1AD"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/lstDesc"
                android:textSize="16sp"
                android:maxEms="30"
                android:maxLines="2"
                android:text="利用假期到著名的黄山去看看，利用假期到著名的黄山区看看...利用假期到著名的黄山去看看，利用假期到著名的黄山区看看...利用假期到著名的黄山去看看，利用假期到著名的黄山区看看..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>